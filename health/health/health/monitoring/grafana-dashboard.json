{
  "id": null,
  "uid": "pi-node-prod",
  "title": "Pi Node â€“ Production Monitoring",
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Horizon API Status",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "expr": "pi_node_horizon_up", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "thresholds": {
          "mode": "absolute",
          "steps": [
            { "color": "red", "value": 0 },
            { "color": "green", "value": 1 }
          ]
        }
      }
    },
    {
      "type": "stat",
      "title": "Stellar-Core Status",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "expr": "pi_node_core_up", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "thresholds": {
          "mode": "absolute",
          "steps": [
            { "color": "red", "value": 0 },
            { "color": "green", "value": 1 }
          ]
        }
      }
    },
    {
      "type": "timeseries",
      "title": "CPU Load",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        { "expr": "pi_node_cpu_load", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (%)",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "targets": [
        { "expr": "pi_node_memory_used_percent", "refId": "A" }
      ]
    }
  ]
}
